        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.866"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/my_button_countrynames" />

    <TextView
        android:id="@+id/tvAndora"
        style="@style/Basics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/andorra"
        app:layout_constraintBottom_toBottomOf="@+id/ivAndoraButton"
        app:layout_constraintEnd_toEndOf="@+id/ivAndoraButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/ivAndoraButton"
        app:layout_constraintTop_toTopOf="@+id/ivAndoraButton" />

    <ImageView
        android:id="@+id/ivTailandButton"
        android:layout_width="87dp"
        android:layout_height="29dp"
        android:layout_marginStart="95dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/ivTailand"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/my_button_countrynames" />

    <TextView
        android:id="@+id/tvTailand"
        style="@style/Basics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/thailand"
        app:layout_constraintBottom_toBottomOf="@+id/ivTailandButton"
        app:layout_constraintEnd_toEndOf="@+id/ivTailandButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/ivTailandButton"
        app:layout_constraintTop_toTopOf="@+id/ivTailandButton" />

    <ImageView
        android:id="@+id/ivEmiratesButton"
        android:layout_width="87dp"
        android:layout_height="29dp"
        android:layout_marginEnd="95dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/ivEmirates"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.884"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/my_button_countrynames" />

    <TextView
        android:id="@+id/tvEmirates"
        style="@style/Basics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:text="@string/emirates"
        app:layout_constraintBottom_toTopOf="@+id/ivEmirates"
        app:layout_constraintEnd_toEndOf="@+id/ivEmiratesButton"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="@+id/ivEmiratesButton"
        app:layout_constraintTop_toTopOf="@+id/ivEmiratesButton"
        app:layout_constraintVertical_bias="0.666" />

