        app:srcCompat="@drawable/tailand" />

    <ImageView
        android:id="@+id/ivEmirates"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="250dp"
        android:layout_marginBottom="45dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/ivTailand"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/emirates" />

    <ImageView
        android:id="@+id/ivFranceButton"
        android:layout_width="87dp"
        android:layout_height="29dp"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/ivFrance"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/my_button_countrynames" />

    <TextView
        android:id="@+id/tvFrance"
        style="@style/Basics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/france"
        app:layout_constraintBottom_toBottomOf="@+id/ivFranceButton"
        app:layout_constraintEnd_toEndOf="@+id/ivFranceButton"
        app:layout_constraintStart_toStartOf="@+id/ivFranceButton"
        app:layout_constraintTop_toTopOf="@+id/ivFranceButton"
